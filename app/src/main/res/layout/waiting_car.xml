<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightgray">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/darkcyan"
        >
        <ImageView
            android:id="@+id/back"
            style="@style/ActionBar_LeftImg_Style"
            android:src="@drawable/lighting"/>
        <TextView
            android:id="@+id/title"
            android:layout_toRightOf="@+id/back"
            android:layout_marginLeft="10dp"
            style="@style/ActionBar_CenterText_Style"
            android:text="等待送车"
            />
        <ImageView
            android:layout_toLeftOf="@+id/title1"
            style="@style/ActionBar_RightImg_Style"
            android:src="@drawable/one_option_blue"/>
        <TextView
            android:id="@+id/title1"
            android:layout_alignParentRight="true"
            style="@style/ActionBar_CenterText_Style"
            android:layout_marginRight="15dp"
            android:text="取消"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="480dp"
        android:background="@drawable/map"
        >


        <LinearLayout
            style="@style/map_InLinearLayout_Style"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:src="@drawable/default_head"
                />
             <LinearLayout
                 android:layout_width="80dp"
                 android:layout_height="fill_parent"

                 android:orientation="vertical"
                 >



                 <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="25dp"
                 android:gravity="center"
                 android:text="刘师傅"
                 />
                 <TextView
                     android:layout_width="fill_parent"
                     android:layout_height="25dp"
                     android:gravity="center"
                     android:text="工号：9587"
                     />
             </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView
    android:layout_width="100dp"
    android:layout_height="fill_parent" />
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="@drawable/phone_button"
             >
             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="fill_parent" />
             <TextView
                 android:layout_width="100dp"
                 android:layout_height="fill_parent"
                 android:textColor="@color/red"
                 android:gravity="center"
                 android:text="15280033129"
                 />
         </LinearLayout>
             </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="fill_parent" />
<ImageView
    android:layout_width="20dp"
    android:layout_height="fill_parent"
    android:src="@drawable/order_car_icon"
    />
<TextView
    android:layout_width="90dp"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:text="距离用车还有"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="25dp"
            android:text="16"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@color/blue"

            android:text="分钟"/>
        </LinearLayout>

</LinearLayout>