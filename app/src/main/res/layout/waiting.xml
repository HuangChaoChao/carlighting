<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightgray">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/darkcyan"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/leftImg"
            style="@style/ActionBar_LeftImg_Style"
            android:src="@drawable/lighting"/>

        <TextView
            android:id="@+id/title"
            android:layout_toRightOf="@+id/leftImg"
            style="@style/ActionBar_CenterText_Style"
            android:layout_marginLeft="10dp"
            android:text="等待应答"
            />

        <ImageView
            android:id="@+id/rightImg"
            style="@style/ActionBar_RightImg_Style"
            android:layout_toLeftOf="@+id/title1"
            android:src="@drawable/one_option_blue"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:id="@+id/title1"
            style="@style/ActionBar_CenterText_Style"
            android:text="取消"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/map"
        >


        <LinearLayout
            style="@style/map_InLinearLayout_Style"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="fill_parent" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:src="@drawable/send_car_icon"
                />
            <TextView
                android:layout_width="160dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="系统正在派车，请稍等....."
                />
            </LinearLayout>

    </LinearLayout>



</LinearLayout>

